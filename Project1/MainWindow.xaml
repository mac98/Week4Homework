<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Please enter your monthly payment and principle amount to the nearest hundreths." HorizontalAlignment="Left" Margin="175,12,0,0" VerticalAlignment="Top" Width="450"/>
        <TextBox x:Name="MonthlyPayment" HorizontalAlignment="Left" Height="24" Margin="350,80,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="PrincipleAmount" HorizontalAlignment="Left" Height="24" Margin="350,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <Label Content="Monthly Payment" HorizontalAlignment="Left" Margin="348,58,0,0" VerticalAlignment="Top" Width="104"/>
        <Label Content="Principle Payment" HorizontalAlignment="Left" Margin="348,138,0,0" VerticalAlignment="Top" Width="104"/>
        <Button Content="Calculate Payments" HorizontalAlignment="Left" Margin="340,240,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>

    </Grid>
</Window>
